<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#E1F5FE">

    <LinearLayout
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Título sección -->
        <TextView
            android:id="@+id/txtTituloHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado actual de la calidad del aire"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#01579B"
            android:layout_marginBottom="6dp" />

        <!-- Tarjeta: selector de dispositivo + círculo de estado -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:elevation="4dp"
            android:padding="10dp"
            app:cardCornerRadius="18dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Dispositivo + spinner -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dispositivo"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginEnd="8dp" />

                    <Spinner
                        android:id="@+id/spDispositivosHome"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <!-- Círculo de estado (solo contorno, texto dentro) -->
                <FrameLayout
                    android:id="@+id/viewCircleEstado"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bg_circle_good">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txtEstado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Buena"
                            android:textColor="#2E7D32"
                            android:textStyle="bold"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/txtEstadoLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Calidad del aire"
                            android:textColor="#2E7D32"
                            android:textSize="13sp" />
                    </LinearLayout>
                </FrameLayout>

                <!-- Última lectura -->
                <TextView
                    android:id="@+id/txtUltimaLectura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Última lectura: --"
                    android:textSize="12sp"
                    android:textColor="#777777"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Fila 2: CO2 / Índice -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="4dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="3dp"
                android:elevation="3dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CO₂"
                        android:textStyle="bold"
                        android:textColor="#B71C1C" />

                    <TextView
                        android:id="@+id/txtCO2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- ppm"
                        android:textSize="18sp"
                        android:textColor="#B71C1C"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/txtCO2Objetivo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Objetivo:"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="3dp"
                android:elevation="3dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Índice de calidad"
                        android:textStyle="bold"
                        android:textColor="#004D40" />

                    <TextView
                        android:id="@+id/txtIndiceCalidad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- / 100"
                        android:textSize="18sp"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/txtIndiceNivel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nivel: --"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>



        <!-- Fila 1: Temperatura / Humedad -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="4dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="3dp"
                android:elevation="3dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperatura"
                        android:textStyle="bold"
                        android:textColor="#1565C0" />

                    <TextView
                        android:id="@+id/txtTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- °C"
                        android:textSize="18sp"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/txtTempConfort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confort: --"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="3dp"
                android:elevation="3dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Humedad relativa"
                        android:textStyle="bold"
                        android:textColor="#2E7D32" />

                    <TextView
                        android:id="@+id/txtHum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- %"
                        android:textSize="18sp"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/txtHumConfort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confort: --"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <!-- Riesgo SEE -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardRiesgoSee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:elevation="3dp"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Riesgo SEE (Síndrome del Edificio Enfermo)"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/txtRiesgoSee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bajo"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Recomendación -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recomendación rápida"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/txtRecomendacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>

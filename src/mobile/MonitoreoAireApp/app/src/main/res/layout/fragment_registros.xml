<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#ECEFF1">

    <!-- Título -->
    <TextView
        android:id="@+id/txtTituloRegistros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registros de eventos"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#01579B"
        android:layout_marginBottom="4dp" />

    <!-- Resumen (fecha + total) -->
    <TextView
        android:id="@+id/txtResumenRegistros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha: - · Total eventos: 0"
        android:textSize="14sp"
        android:textColor="#455A64"
        android:layout_marginBottom="8dp" />

    <!-- Filtro por fecha -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/txtFechaSeleccionada"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fecha: -"
            android:textSize="14sp"
            android:textColor="#455A64" />

        <Button
            android:id="@+id/btnCambiarFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cambiar fecha" />
    </LinearLayout>

    <!-- Lista de registros -->
    <ListView
        android:id="@+id/lvRegistros"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp" />

    <!-- Botones de acciones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnExportar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exportar CSV" />

        <Button
            android:id="@+id/btnLimpiar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Limpiar"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</LinearLayout>

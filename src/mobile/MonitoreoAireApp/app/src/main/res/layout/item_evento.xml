<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/imgIconoEvento"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@android:drawable/ic_dialog_alert"
        app:tint="#D32F2F"
        android:layout_marginEnd="12dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTituloEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alerta CO₂ alto"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtMensajeEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CO₂ 1200 ppm en Sala"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtFechaEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025-11-21 23:28:50"
            android:textSize="12sp"
            android:textColor="#666666" />
    </LinearLayout>

</LinearLayout>
